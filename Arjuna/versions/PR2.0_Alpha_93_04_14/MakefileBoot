# Makefile for creating the top-level Makefile.
#

#
# $Id: MakefileBoot,v 1.8 1993/03/18 14:19:42 nmcl Exp $
#

MAKE                  = make
IMAKE                 = imake
ARJUNA_IMAKE_INCLUDE  = Config
ARJUNA_IMAKE_TEMPLATE = Arjuna.tmpl

ARJUNA_IMAKE_FLAGS    = 
# ARJUNA_IMAKE_FLAGS  = "-DUseInstalled -DTOPDIR_DEFAULT=`pwd`"

Makefile ::
	@echo
	@echo "You have run 'configure'. Haven't you?"
	@echo
	@echo "## Building root 'Makefile' ##"
	@$(IMAKE) -T$(ARJUNA_IMAKE_TEMPLATE) -I$(ARJUNA_IMAKE_INCLUDE) $(ARJUNA_IMAKE_FLAGS)
	@echo

Makefiles :: Makefile
	@echo
	@echo "## Building 'Makefiles' ##"
	@$(MAKE) Makefiles
	@echo

depend :: Makefiles
	@echo
	@echo "## Building 'depend' ##"
	@$(MAKE) depend
	@echo

all :: depend
	@echo
	@echo "## Building 'all' ##"
	@$(MAKE) all
	@echo

install :: all
	@echo
	@echo "## Building 'install' ##"
	@$(MAKE) install
	@echo
