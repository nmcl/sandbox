MAKE           = make
IMAKE          = imake
RM             = rm -f

IMAKE_INCLUDE  = -Iconfig -IC:/temp/src/JTSArjuna/2.2/JTSArjuna/Resources/JDBC/config -IC:/temp/src/JTSArjuna/2.2/JTSArjuna/Resources/JDBC2/config -IC:/temp/src/JTSArjuna/2.2/JTSArjuna/CosServices/CosTransactions/config -IC:/temp/src/JTSArjuna/2.2/JTSArjuna/OrbPortability/config -IC:/temp/src/JTSArjuna/2.2/JTSArjuna/ArjunaCore/config -IC:/temp/src/JTSArjuna/2.2/JTSArjuna/ArjunaCommon/config -IC:/temp/src/JTSArjuna/2.2/JTSArjuna/JavaHarness/config -IC:/temp/src/JTSArjuna/2.2/JTSArjuna/CosServices/CosRecovery/config -IC:/temp/src/JTSArjuna/2.2/JTSArjuna/ModuleBuildSystem/config
IMAKE_TEMPLATE = ModuleBuildSystem.tmpl
IMAKE_FLAGS    = 
MAKEFILE_TMP   = Makefile.tmp

Makefile ::
	@echo "Building 'Makefile.tmp'"
	@$(IMAKE) -T$(IMAKE_TEMPLATE) $(IMAKE_INCLUDE) $(IMAKE_FLAGS) -s $(MAKEFILE_TMP)
	@$(MAKE) -f $(MAKEFILE_TMP) Makefile
	@$(RM) $(MAKEFILE_TMP)
