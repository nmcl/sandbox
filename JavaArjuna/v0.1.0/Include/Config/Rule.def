	COMMAND_PREFIX($(STUBGEN)) LOCAL_CPPFLAGS_VAR CPPFLAGS_VAR STUBFLAGS_VAR +s service CPLUSPLUS_HEADER(file) @@\
                                                                                                   @@\
MakeObjectCPLUSPLUS(CLIENT_STUBCODE_F(obj), flags)                                                 @@\
MakeObjectCPLUSPLUS(SERVER_STUBCODE_F(obj), flags)                                                 @@\
